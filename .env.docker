# Container-optimized environment variables
TRAINING_INPUT_DIR=/app/data/training/input
TRAINING_GOOD_DIR=/app/data/training/good
TRAINING_BAD_DIR=/app/data/training/bad
TRAINING_SCHEMA_FILE=/app/schema/schema_training.json
TRAINING_LOG_FILE=/app/logs/training.log
TRAINING_SCHEMA_FILENAME=schema_training.json
TRAINING_NUM_COLUMNS=592

PREDICTION_INPUT_DIR=/app/prediction/input
PREDICTION_GOOD_DIR=/app/prediction/good
PREDICTION_BAD_DIR=/app/prediction/bad
PREDICTION_SCHEMA_FILE=/app/schema/schema_prediction.json
PREDICTION_LOG_FILE=/app/logs/prediction.log
PREDICTION_SCHEMA_FILENAME=schema_prediction.json
PREDICTION_NUM_COLUMNS=591
PREDICTION_OUTPUT_DIR=/app/prediction/output

MAIN_LOGS_DIR=/app/logs
MAIN_LOG_FILE=/app/logs/main_process.log
FALLBACK_LOGS_DIR=/app/logs
FALLBACK_LOG_FILE=/app/logs/validation_fallback.log
CSV_EXTENSION=.csv
BASE_DIR=/app
SCHEMA_DIR=/app/schema
SCHEMA_LOGS_DIR=/app/logs
SCHEMA_LOG_FILE=/app/logs/schema_creation.log
DB_LOG_FILE=/app/logs/db_process.log

# BigQuery Configuration (NO SECRETS - passed via environment)
BQ_DATASET=wafer_dataset
BQ_TABLE_TRAINING=wafer_training_data
BQ_TABLE_PREDICTION=wafer_prediction_data
BQ_LOCATION=US
BQ_SCHEMA_JSON_TRAINING=/app/schema/schema_training.json
BQ_SCHEMA_JSON_PREDICTION=/app/schema/schema_prediction.json

MODEL_SAVE_DIR=/app/training_model
FILENAME_PATTERN=^wafer_\d{8}_\d{6}\.csv$
MAX_WORKERS=4

# API Configuration
PORT=8080
FLASK_ENV=production
FLASK_DEBUG=false